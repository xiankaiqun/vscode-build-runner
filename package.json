{
  "name": "build-runner",
  "displayName": "Dart build_runner",
  "description": "Dart build_runner tools in VSCode.",
  "publisher": "Kaiqun",
  "version": "1.0.6",
  "engines": {
    "vscode": "^1.55.0"
  },
  "repository": "https://github.com/awagege/vscode-build-runner",
  "extensionDependencies": [
    "Dart-Code.dart-code"
  ],
  "categories": [
    "Other"
  ],
  "keywords": [
    "flutter",
    "dart",
    "build_runner",
    "generate"
  ],
  "activationEvents": [
    "onLanguage:dart",
    "workspaceContains:**/pubspec.yaml"
  ],
  "icon": "static/icon.png",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "build-runner",
        "command": "build_runner.build",
        "title": "build",
        "icon": "$(play)"
      },
      {
        "category": "build-runner",
        "command": "build_runner.watch",
        "title": "watch",
        "icon": "$(server)"
      },
      {
        "category": "build-runner",
        "command": "build_runner.terminate",
        "title": "terminate",
        "icon": "$(debug-stop)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "build_runner.watch",
          "when": "false"
        },
        {
          "command": "build_runner.build",
          "when": "false"
        },
        {
          "command": "build_runner.terminate",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "build_runner.watch",
          "when": "view == build_runner_view && viewItem == file",
          "group": "inline"
        },
        {
          "command": "build_runner.build",
          "when": "view == build_runner_view && viewItem == file",
          "group": "inline"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "build_runner_view",
          "name": "BUILD RUNNER"
        }
      ]
    }
  },
  "scripts": {
    "publish": "vsce publish",
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "prettier": "^2.4.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "vsce": "^2.1.0",
    "vscode-test": "^1.6.1",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "pidtree": "^0.5.0",
    "yaml": "^1.10.2"
  }
}
