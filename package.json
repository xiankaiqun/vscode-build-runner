{
  "name": "build-runner",
  "displayName": "Dart build_runner",
  "description": "Dart build_runner tools in VSCode.",
  "publisher": "Kaiqun",
  "version": "2.1.0",
  "engines": {
    "vscode": "^1.62.0"
  },
  "repository": "https://github.com/awagege/vscode-build-runner",
  "categories": [
    "Other"
  ],
  "keywords": [
    "flutter",
    "dart",
    "build_runner",
    "json_serializable",
    "freezed",
    "built_value",
    "flutter_mobx",
    "build runner",
    "generate",
    "generator"
  ],
  "activationEvents": [
    "onLanguage:dart",
    "workspaceContains:pubspec.yaml",
    "workspaceContains:*/pubspec.yaml",
    "workspaceContains:*/*/pubspec.yaml"
  ],
  "extensionDependencies": [
    "Dart-Code.dart-code"
  ],
  "icon": "static/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Dart build_runner",
      "properties": {
        "build_runner.fvm": {
          "type": "boolean",
          "default": false,
          "description": "Use FVM prefix"
        }
      }
    },
    "commands": [
      {
        "category": "build-runner",
        "command": "build_runner.build",
        "title": "build",
        "icon": "$(play)"
      },
      {
        "category": "build-runner",
        "command": "build_runner.watch",
        "title": "watch",
        "icon": "$(server)"
      },
      {
        "category": "build-runner",
        "command": "build_runner.quit",
        "title": "quit",
        "icon": "$(debug-stop)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "build_runner.watch",
          "when": "false"
        },
        {
          "command": "build_runner.build",
          "when": "false"
        },
        {
          "command": "build_runner.quit",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "build_runner.watch",
          "when": "view == build_runner_view && viewItem == file",
          "group": "inline"
        },
        {
          "command": "build_runner.build",
          "when": "view == build_runner_view && viewItem == file",
          "group": "inline"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "build_runner_view",
          "name": "BUILD RUNNER"
        }
      ]
    }
  },
  "scripts": {
    "publish": "vsce publish",
    "build": "vsce package",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.2.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "path": "^0.12.7",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "pidtree": "^0.5.0",
    "yaml": "^1.10.2"
  }
}
