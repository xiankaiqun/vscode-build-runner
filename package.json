{
  "name": "vscode-build-runner",
  "displayName": "vscode-build-runner",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dart",
    "workspaceContains:**/pubspec.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "build-runner",
        "command": "build_runner.build",
        "title": "build_runner build",
        "icon": "$(play)"
      },
      {
        "category": "build-runner",
        "command": "build_runner.watch",
        "title": "build_runner watch",
        "icon": "$(server)"
      },
      {
        "category": "build-runner",
        "command": "build_runner.quit",
        "title": "build_runner watch quit",
        "icon": "$(debug-stop)"
      },
      {
        "category": "build-runner",
        "command": "build_runner.openFile",
        "title": "openFile"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "build_runner.watch",
          "when": "false"
        },
        { 
          "command": "build_runner.build",
          "when": "false"
        },
        {
          "command": "build_runner.quit",
          "when": "false"
        },
        {
          "command": "build_runner.openFile",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "build_runner.watch",
          "when": "view == build_runner_view && viewItem == pubspec",
          "group": "inline"
        },
        {
          "command": "build_runner.build",
          "when": "view == build_runner_view && viewItem == pubspec",
          "group": "inline"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "build_runner_view",
          "name": "BUILD RUNNER"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "glob": "^7.1.6",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
    "vscode-test": "^1.5.2",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "ps-list": "^7.2.0", 
    "yaml": "^1.10.2"
  }
}
